		</dependency>
		<dependency>
			<groupId>org.mybatis.spring.boot</groupId>
			<artifactId>mybatis-spring-boot-starter</artifactId>
			<version>2.1.1</version>
		</dependency>
		<!-- 邮件模块 https://mvnrepository.com/artifact/org.springframework.boot/spring-boot-starter-mail -->
